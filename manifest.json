{
  "manifest_version": 3,
  "name": "RephraseGenie",
  "version": "1.0",
  "description": "Rephrase selected text using AI with RephraseGenie",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting",
    "identity",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "oauth2": {
    "client_id": "your-openai-oauth-client-id",
    "scopes": ["api"]
  }
}